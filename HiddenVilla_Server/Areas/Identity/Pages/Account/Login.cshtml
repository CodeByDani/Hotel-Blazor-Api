@page
@model LoginModel

@{
    ViewData["Title"] = "ورود";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center" style="direction: rtl; text-align: right;">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <section>
                        <h4 class="card-title text-center mb-4">استفاده از حساب محلی برای ورود</h4>
                        <hr />
                        <form id="account" method="post">
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" placeholder="ایمیل خود را وارد کنید" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" placeholder="رمز عبور خود را وارد کنید" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="Input.RememberMe" class="form-check-input" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-block">ورود</button>
                            </div>

                            <div class="text-center mt-4">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">رمز عبور خود را فراموش کرده‌اید؟</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">ثبت نام به عنوان کاربر جدید</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <section>
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="card shadow-lg mt-4 mt-md-0">
                            <div class="card-body">
                                <h5 class="card-title text-center">ورود با استفاده از حساب خارجی</h5>
                                <hr />
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="ورود با استفاده از حساب @provider.DisplayName">
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
