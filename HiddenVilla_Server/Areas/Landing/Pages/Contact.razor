@page "/landing/contact"
@inject IJSRuntime JsRuntime
@layout LandingLayout

<div style="height:10vh ;background: rgba(0,0, 0, 0.5); /* Black with 70% opacity */ color: white; /* White text color to contrast the black background */">
</div>
<div class="contact-page text-right">
    <h2>تماس با ما</h2>

    <form class="contact-form" @onsubmit="HandleSubmit">
        <div class="form-group">
            <label for="name">نام:</label>
            <input type="text" id="name" @bind="name" placeholder="نام شما" required />
        </div>

        <div class="form-group">
            <label for="email">ایمیل:</label>
            <input type="email" id="email" @bind="email" placeholder="ایمیل شما" required />
        </div>

        <div class="form-group">
            <label for="subject">موضوع:</label>
            <input type="text" id="subject" @bind="subject" placeholder="موضوع" required />
        </div>

        <div class="form-group">
            <label for="message">پیام:</label>
            <textarea id="message" @bind="message" placeholder="پیام شما" required></textarea>
        </div>

        <button type="submit" class="btn-submit">ارسال پیام</button>
    </form>
</div>

@code {
    private string name;
    private string email;
    private string subject;
    private string message;

    private async Task HandleSubmit()
    {
        await JsRuntime.ToastrSuccess($"\n نام: {name}\n ایمیل: {email}\n موضوع: {subject}\n پیام: {message}ارسال شد");
    }
}
